datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Agent {
  id            String   @id @default(uuid())
  name          String
  description   String?
  provider      String   // "ollama", "openai", "gemini"
  model         String   // e.g., "llama3", "gpt-4", "gemini-pro"
  emoji         String   @default("ðŸ¤–")
  workspace     String   @default("default")
  status        String   @default("active") // "active", "paused", "error"
  config        String?  // JSON string for provider-specific config
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  messages      Message[]
  @@index([provider])
}

model Conversation {
  id            String   @id @default(uuid())
  title         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  messages      Message[]
}

model Message {
  id              String   @id @default(uuid())
  conversationId  String
  agentId         String?
  role            String   // "user", "agent"
  content         String
  type            String   @default("message") // "message", "thought", "action"
  createdAt       DateTime @default(now())

  conversation    Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  agent           Agent?       @relation(fields: [agentId], references: [id], onDelete: SetNull)

  @@index([conversationId])
  @@index([agentId])
}
